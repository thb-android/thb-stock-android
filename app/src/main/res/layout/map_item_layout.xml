<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/map_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="股票" />

    <TextView
        android:id="@+id/map_item_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/map_item_txt"
        android:textColor="@color/info_window_move"
        android:textSize="16sp"
        tools:text="额外信息" />

    <TextView
        android:id="@+id/stock_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/stock_percent"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        tools:text="股票当前价格百分比" />

    <TextView
        android:id="@+id/stock_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:textColor="@color/red"
        android:textSize="16sp"
        tools:text="股票当前价格百分比" />
</RelativeLayout>