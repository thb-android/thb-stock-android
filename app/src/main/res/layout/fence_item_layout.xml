<?xml version="1.0" encoding="utf-8"?><!-- 围栏 -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_fence_item">

    <RelativeLayout
        android:id="@+id/item_fence_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/list_child_item_car_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/device_list_item_car" />

        <TextView
            android:id="@+id/item_fence_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_child_item_car_img"
            android:text="禁止实处-电子围栏"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_fence_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_fence_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:text="方圆1000米"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_fence_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_fence_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/list_child_item_car_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="背景色是肯德基咖喱是看得见噶说了肯德基咖喱手机刚打开链接库卡了十几个卡拉斯京代购啦开始的感觉阿莱克斯的感觉啊开始的"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_fence_selected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/common_item_tri_pressed"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_fence_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_1" />

    <TextView
        android:id="@+id/iten_fence_alarm_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/fence_alarm_set"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_line" />

    <View
        android:id="@+id/item_fence_line_vertical"
        android:layout_width="1px"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iten_fence_alarm_set"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_line" />

    <TextView
        android:id="@+id/iten_fence_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="@string/fence_out"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_line" />

    <ImageView
        android:id="@+id/item_fence_icon_out"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/device_application_item_in_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iten_fence_out"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_line" />

    <TextView
        android:id="@+id/iten_fence_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/fence_in"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_fence_icon_in"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_line" />

    <ImageView
        android:id="@+id/item_fence_icon_in"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/device_application_item_in_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_fence_line_vertical"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_line" />

</android.support.constraint.ConstraintLayout>