<?xml version="1.0" encoding="utf-8"?><!-- 围栏 -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_fence_item"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/item_fence_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/list_child_item_car_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/device_list_item_car" />

        <TextView
            android:id="@+id/item_fence_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/list_child_item_car_img"
            android:text="禁止实处-电子围栏"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_fence_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_fence_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:text="方圆1000米"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_fence_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_fence_name"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/list_child_item_car_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="背景色是肯德基咖喱是看得见噶说了肯德基咖喱手机刚打开链接库卡了十几个卡拉斯京代购啦开始的感觉阿莱克斯的感觉啊开始的"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <View
        android:id="@+id/item_fence_manager_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_1" />

    <FrameLayout
        android:id="@+id/item_fence_manager_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_manager_line">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="19dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/device_edit_item_normal" />

        <TextView
            android:id="@+id/item_fence_manager_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="@string/fence_manager_edit"
            android:textColor="@color/dark_gray" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_fence_manager_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/item_fence_manager_edit"
        app:layout_constraintRight_toLeftOf="@+id/item_fence_manager_delete"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_manager_line">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="19dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/device_add_item_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="@string/fence_manager_add_device"
            android:textColor="@color/dark_gray" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_fence_manager_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_fence_manager_line">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="19dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/device_delete_item_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="@string/fence_manager_delete"
            android:textColor="@color/dark_gray" />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>